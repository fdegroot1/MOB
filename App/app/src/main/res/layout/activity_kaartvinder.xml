<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kaartvinder"
    android:orientation="vertical">

    <TextView
        android:id="@+id/kaartvinder_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/card_finder_text"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/proxima_nova_bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/kaartcode_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/card_number_text"
        android:layout_below="@id/kaartvinder_text"
        android:layout_margin="16dp"
        android:fontFamily="@font/proxima_nova_bold"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/ontvang_kaart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:textSize="25dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="Ontvang kaart"
        android:layout_below="@id/kaartcode_input"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/catalogus_button"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/catalogus_button"/>

        <Button
            android:id="@+id/kaartvinder_button"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/kaartvinder_button"/>

        <Button
            android:id="@+id/battle_button"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/battle_button"/>

    </LinearLayout>

</RelativeLayout>